<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_edita"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/image_edita"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_nombre_edita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_nombre_edita"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/view_descripcion_edita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view_descripcion_edita"
                    android:textSize="15sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/image_btn_edita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_edita_item"
                android:background="@color/colorTransparent"
                android:contentDescription="@string/image_btn_edita"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>